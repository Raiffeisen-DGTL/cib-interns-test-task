<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog-ext">

    <changeSet id="filling the colors table" author="storekeeper">
        <insert tableName="colors">
            <column name="color" value="black"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="green"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="blue"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="red"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="gray"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="white"/>
        </insert>
        <insert tableName="colors">
            <column name="color" value="yellow"/>
        </insert>

        <rollback>
            <delete tableName="colors">
                <where>color in ('black','green','blue','red','gray','white','yellow')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>